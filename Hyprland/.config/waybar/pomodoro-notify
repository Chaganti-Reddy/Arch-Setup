#!/bin/bash

# Get the current state of the Pomodoro timer
STATE=$(~/dotfiles/Hyprland/.config/waybar/waybar-module-pomodoro status)

# Extract the status and send notifications based on it
case "$STATE" in
    *"work"*)
        notify-send "Pomodoro Timer" "Time to focus! Work cycle started üõ†Ô∏è" --icon=alarm
        ;;
    *"short break"*)
        notify-send "Pomodoro Timer" "Short break time! Relax for a bit ‚òï" --icon=alarm
        ;;
    *"long break"*)
        notify-send "Pomodoro Timer" "Long break time! Rest well üå¥" --icon=alarm
        ;;
    *"pause"*)
        notify-send "Pomodoro Timer" "Timer paused ‚è∏" --icon=alarm
        ;;
    *"reset"*)
        notify-send "Pomodoro Timer" "Timer reset üîÑ" --icon=alarm
        ;;
    *)
        notify-send "Pomodoro Timer" "Unknown state: $STATE" --icon=alarm
        ;;
esac
