#!/usr/bin/env bash

declare -A options
options=(["Edit Config Files"]=~/.local/bin/dm-confedit ["Record The Screen"]=~/.local/bin/dm-record ["Convert Currencies"]=~/.local/bin/dm-currencies ["Open Dictionary"]=~/.local/bin/dm-dict ["Check the IP Address"]=~/.local/bin/dmip ["Kill an Existing Process"]=~/.local/bin/dmkill ["Open Man Page of an Installed Program"]=~/.local/bin/dmman ["Pick a color"]=~/.local/bin/dm-colpick ["See Latest Reddit Posts"]=~/.local/bin/dm-reddit ["Set Background"]=~/.local/bin/dm-setbg ["Cross check the spelling"]=~/.local/bin/dm-spellcheck ["Translate to Different Language"]=~/.local/bin/dm-translate ["Search Through web"]=~/.local/bin/dm-websearch ["Look through Arch Wiki Docs"]=~/.local/bin/dm-wiki ["Change Color theme of system"]=~/.local/bin/dtos-colorscheme ["Listen to Radio"]=~/.local/bin/dm-radio ["Listen to Music"]=~/.local/bin/dm-music)

choice=$(printf '%s\n' "${!options[@]}" | sort -g | rofi -dmenu -i -p 'Choose an Option: ' "${@}")

if [ "$choice" ]; then
    sh "${options[$choice]}"

# What to do if we just escape without choosing anything.
else
  echo "Program terminated." && exit 0
fi
